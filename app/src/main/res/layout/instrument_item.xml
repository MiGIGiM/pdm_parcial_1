<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.example.music_tracker.ui.instrument.viewmodel.InstrumentViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/instrument_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_gap"
            android:backgroundTint="@color/cyan_200"
            app:cardMaxElevation="@dimen/medium_gap"
            app:cardCornerRadius="@dimen/small_gap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/instrument_name_card_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_gap"
                    android:layout_marginEnd="@dimen/medium_gap"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/flute_text_view"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>